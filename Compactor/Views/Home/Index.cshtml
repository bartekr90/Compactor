@{
    ViewBag.Title = "Zarezerwój";
}

<h1>@ViewBag.Title</h1>

<div class="row">
    <div class="col-sm-10 col-lg-3">
        <div>
            <h2>Dane:</h2>
        </div>
        <div>
            <div class="mb-3">
                Imie
                <br />
                nazwisko
                <br />
                adres
                <br />
            </div>
            <div class="row">
                <button class="btn btn-primary mb-3">Zmień dane</button>
            </div>
        </div>
        <div>
            <p class="mb-3">Wybierz datę:</p>
            <input type="datetime-local" name="name" value="" class="mb-3" />
        </div>
        <div>
            <p class="mb-3">Wybierz godzinę:</p>
            <input type="time" name="name" value="" class="mb-3" />
        </div>
        <div>
            <p class="mb-3">na ile godzin:</p>
            <input type="text" name="name" value="" class="mb-3" />
        </div>
        <div class="mb-3">
            <label>Suma: 28,00 zł</label>
        </div>
        <div class="row">
            <button class="btn btn-primary mb-3">Zatwierdź</button>
        </div>

    </div>

    <div class="col-sm-2 col-lg-2">
    </div>

    <div class="col-sm-12 col-lg-7 ">
        <table class="table table-bordered mt-5">
            <thead>
                <tr>
                    <th scope="col">widok inputu</th>
                    <th scope="col">nazwa inputu</th>
                    <th scope="col">czy mi pasuje</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td><input type="datetime" name="name" value="" /></td>
                    <td>datetime</td>
                    <td>nie</td>
                </tr>
                <tr>
                    <td><input type="date" name="name" value="" />
                    <td>date</td>
                    <td>nie</td>
                </tr>
                <tr>
                    <td><input type="datetime-local" name="name" value="" /></td>
                    <td>datetime-local</td>
                    <td>tak</td>
                </tr>
                <tr>
                    <td><input type="week" name="name" value="" /></td>
                    <td>week</td>
                    <td>nie</td>
                </tr>
            </tbody>
        </table>
    </div>

</div>