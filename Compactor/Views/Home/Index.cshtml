@model Compactor.Models.ViewModel.InitialViewModel
@{
    ViewBag.Title = "Zarezerwój";
}

<h1>@ViewBag.Title</h1>

<div class="row">
    <div class="col-sm-12 col-lg-7">
        <table class="table table-bordered table-hover mt-3 mb-5">
            <thead>
                <tr>
                    <th scope="col">Zdj</th>
                    <th scope="col">Nazwa</th>
                    <th scope="col">Cena/godz.</th>
                    <th scope="col">Dostępność</th>
                    <th scope="col"></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var position in Model.GroupList)
                {
                    <tr>
                        <td>
                        </td>
                        <td>
                            @position.Name
                        </td>
                        <td>@position.Price</td>
                        <td>@(position.TotalNumber-position.BorrowedNumber)</td>
                        <td>
                            @if ((position.TotalNumber - position.BorrowedNumber) > 0)
                            {
                                <button class="btn btn-danger btn-sm">-</button>
                                <label>@(position.TotalNumber - position.BorrowedNumber)</label>
                                <button class="btn btn-success btn-sm">+</button>
                                
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

    <div class=" col-lg-2"></div>

    <div class="col-sm-12 col-lg-3">
        <div>
            <h2>Dane:</h2>
            <div class="form-group">
                @Html.LabelFor(x => x.UserDataList)
                @Html.DropDownListFor(x => x.Reservation.IdUserData,
                   new SelectList(Model.UserDataList, "Id", "Name"),
                   "-- Wbierz klienta --",
                   new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Reservation.IdUserData)

            </div>
        </div>


